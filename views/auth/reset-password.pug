extends ../layout/index
block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-3xl.font-extrabold.mt-10= pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg
        .mt-8.mx-auto.max-w-md.space-y-5 
            .bg-white.py-8.px-4.shadow
                form(method='POST')
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div.mb-4 
                        label.block.text-sm.uppercase.text-grey-500.mb-2.font-bold(for='password') Establece tu nueva contrase単a 
                        input#password.w-full.px-3.py-2.border.border-purple-300.rounded-md.placeholder-gray-400(placeholder='Tu password' type='password' name='password')
                    div.mb-4 
                        label.block.text-sm.uppercase.text-grey-500.mb-2.font-bold(for='repeat_pwd') Repite tu nueva contrase単a 
                        input#repeat_pwd.w-full.px-3.py-2.border.border-purple-300.rounded-md.placeholder-gray-400(placeholder='Tu nueva contrase単a' type='password' name='repeat_pwd')
                   
                    input(class='w-full bg-indigo-600 text-white font-bold py-3 cursor-pointer hover:bg-indigo-400' type='submit' value='Establecer contrase単a')
