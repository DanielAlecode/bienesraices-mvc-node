extends ../layout/index
block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-3xl.font-extrabold.mt-10= pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        .mt-8.mx-auto.max-w-md.space-y-5 
            .bg-white.py-8.px-4.shadow
                form(action="/auth/login" method="POST")
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div.mb-4 
                        label.block.text-sm.uppercase.text-grey-500.mb-2.font-bold(for='email') Tu email 
                        input#email.w-full.px-3.py-2.border.border-purple-300.rounded-md.placeholder-gray-400(placeholder='Tu email' type='text' name='email')
                    div.mb-4 
                        label.block.text-sm.uppercase.text-grey-500.mb-2.font-bold(for='password') contraseña 
                        input#password.w-full.px-3.py-2.border.border-purple-300.rounded-md.placeholder-gray-400(placeholder='password' type='password' name='password')
                    div.mb-4.flex.items-center.justify-between
                       a.text-gray-500.text-xs(href="/auth/registro") ¿Aún no tienes cuenta?   
                       a.text-gray-500.text-xs(href="/auth/olvide-password") Olvidé mi contraseña

                    input(class='w-full bg-indigo-600 text-white font-bold py-3 cursor-pointer hover:bg-indigo-400' type='submit' value='Iniciar Sesión')
