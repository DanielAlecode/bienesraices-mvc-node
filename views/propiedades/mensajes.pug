extends ../layout/admin

block contenido
    br
    br
    h2(class="text-3xl mt-50 font-extrabold text-center my-10 text-gray-700 ")= pagina
   
    div(class="mx-auto max-w-4xl bg-gradient-to-r from-white to-gray-50 shadow-lg rounded-lg mt-5 p-5 border border-indigo-100")
        if mensajes && mensajes.length > 0
            ul(class="space-y-5")
                each mensaje in mensajes
                    li(class="border border-indigo-300 bg-white rounded-lg p-5 shadow-md hover:shadow-lg transition duration-300")
                        p(class="font-bold text-indigo-800 flex items-center gap-2")
                            i(class="fas fa-user text-indigo-600")
                            | Nombre: 
                            span(class="font-normal text-gray-700")= mensaje.usuario.nombre
                        p(class="font-bold text-green-800 flex items-center gap-2 mt-2")
                            i(class="fas fa-envelope text-green-600")
                            | Correo: 
                            span(class="font-normal text-gray-700")= mensaje.usuario.email
                        p(class="font-bold text-blue-800 flex items-center gap-2 mt-2")
                            i(class="fas fa-comment text-blue-600")
                            | Mensaje: 
                            span(class="font-normal text-gray-700")= mensaje.mensaje
                        p(class="text-sm text-gray-600 mt-4 flex items-center gap-2")
                            i(class="fas fa-calendar-alt text-gray-500")
                            | Enviado el: 
                            span(class="font-normal")= new Date(mensaje.createdAt).toLocaleDateString("es-ES")
                a(href="/mis-propiedades" class="rounded py-2 px-10 bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-purple-600 hover:to-indigo-600 text-sm font-bold text-center text-white uppercase my-5  w-full sm:w-auto flex items-center justify-center gap-2 shadow-md")
                    i(class="fas fa-arrow-left text-white") 
                    | Volver
        else
            div(class="text-center text-gray-600 p-5 bg-yellow-50 border-l-4 border-yellow-400 rounded shadow-md")
                i(class="fas fa-info-circle text-yellow-500 text-2xl mb-2 block")
                p(class="text-yellow-700 font-semibold") No Hay Mensajes
