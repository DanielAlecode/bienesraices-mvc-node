extends ../layout/admin

block styles
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.css")
    meta(name='csrf-token' content= csrfToken)
block contenido
  .py-10
    h1.text-4xl.my-10.font-extrabold.text-center Bienes
      span.font-normal Raices
    h2.text-center.text-2xl.font-extrabold= pagina

    if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

    div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
        form.space-y-8( id="imagen" class="dropzone border-dashed boder-2 w-full min:h-96 h-auto rounded flex-coljustify-center items-center" method="POST" action=`/propiedades/agregar-imagen/${propiedad.id}`)
            input(type="hidden" name="_csrf" value= csrfToken)
           

        button(id="publicar" class='mt-5 w-full bg-indigo-600 text-white font-bold py-3 cursor-pointer hover:bg-indigo-400' type='button') Publicar propiedad

block scripts
    script(src="/js/agregarImagen.js")
   


